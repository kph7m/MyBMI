<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/itemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="１日"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemHeight"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:text="身長：１８１cm"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/itemDate"
        app:layout_constraintTop_toTopOf="@+id/itemDate" />

    <TextView
        android:id="@+id/itemWeight"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:text="体重：８０kg"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/itemHeight"
        app:layout_constraintTop_toTopOf="@+id/itemDate" />

    <TextView
        android:id="@+id/itemBMI"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:text="BMI：20.3"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/itemWeight"
        app:layout_constraintTop_toTopOf="@+id/itemDate" />

    <TextView
        android:id="@+id/itemExcuse"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_below="@+id/itemDate"
        android:layout_marginTop="4dp"
        android:text="今日のご飯は、カレーライス、とんかつ、寿司、チャーハン、カレーライス！"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemDate" />
</androidx.constraintlayout.widget.ConstraintLayout>